  <body>
    <a href="/saves">Saves</a> &bull; <a href="/clients">Clients</a>
    <h1>Clients</h1>
    <form method="POST" action="/clients/new">
      <input type="text" name="name" placeholder="Enter new client name.." />
      <input type="submit" name="submit" value="New User" />
    </form>
    <ul>
    <% docs.forEach(function (doc) { %>
      <li><a href="/clients/<%= doc._id %>"><%= doc.name %></a></li>
    <% }) %>
    </ul>
  </body>
</html>
